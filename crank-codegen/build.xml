<project name="codegen" default="default" basedir=".">
	<description>Builds, tests, and runs the project codegen.</description>
	<!--import file="nbproject/build-impl.xml"/-->
	<property environment="env"/>
	<property name="app.dir" value="target"/>
	<property name="app.name" value="codegen"/>
	<property name="app.version" value="1.0-SNAPSHOT"/>
	<property name="app.jar" value="${app.dir}/${app.name}-${app.version}.jar"/>
	<path id="libs.path">
		<fileset dir="${env.GROOVY_HOME}/lib" includes="groovy*.jar"/>
		<fileset dir="${env.M2_REPO}" includes="**/asm*2.2.3*.jar"/>
		<fileset dir="${env.M2_REPO}" includes="**/antlr-2.7.6.jar"/>
		<fileset dir="lib" includes="**/*.jar"/>
	</path>
	<!-- XDOCS -->
	<property name="docs.src" value="xdocs"/>
	<property name="docs.dest" value="docs"/>
	<property name="xhtml.docs.dest" value="docs/.xhtml-generated"/>
	<!--property name="fo.docs.dest" value="docs/.fo-generated"/-->
	<property name="fo.docs.dest" value="docs"/>
	
