	<!-- ================================================================== -->
	<!-- XSLT   Documentation Builder                                       -->
	<!-- ================================================================== -->
	<target name="docs" depends="clean_docs">
		<xslt basedir="${docs.src}" destdir="${docs.dest}" style="${docs.src}/stylesheets/site.xsl" includes="**/*.xml"/>
		<copy todir="${docs.dest}/images" filtering="no">
            <fileset dir="${docs.src}/images"/>
        </copy>
	</target>
	<target name="clean_docs">
		<delete dir="${docs.dest}"/>
		<delete dir="${xhtml.docs.dest}"/>
	</target>
	<target name="runStandalone">
		<echo>${env.GROOVY_HOME}</echo>
		<java classname="org.codegen.gui.GeneratorSwingApp" fork="true" failonerror="true" maxmemory="512m">
			<classpath>
				<pathelement location="${app.jar}"/>
				<path refid="libs.path"/>
			</classpath>
		</java>
	</target>
	
	<target name="tidy-docs" depends="docs">
	
	<mkdir dir="${xhtml.docs.dest}"/>	 
	 <tidy destdir="${xhtml.docs.dest}">
   <fileset dir="docs" />
   <parameter name="drop-font-tags" value="true" />
	 </tidy>
 </target>
 
<target name="probe-proxy">	
    <condition property="http.proxyEnabled">
      <and>
        <isset property="http.proxyHost"/>
        <isreachable host="${http.proxyHost}"/>
      </and>
    </condition>
    <echo>Proxy bypassed: ${http.proxyEnabled}</echo> 
  </target> 
  
  <target name="proxy" depends="probe-proxy" if="http.proxyEnabled">
	  <echo>${http.proxyHost}</echo>
	  <echo>${http.proxyPort}</echo>
	  <echo>${http.proxyUser}</echo>
	  <echo>${http.proxyPass}</echo>
      <setproxy proxyhost="${http.proxyHost}" proxyport="${http.proxyPort}"
      proxyuser="${http.proxyUser}" proxypassword="${http.proxyPass}"/>

  <!--get src="http://ant.apache.org/" dest="help/index.html" verbose="on"/-->
  </target>

<target name="generate-fo" description="Generates XSL:FO file" depends="tidy-docs, proxy">
		<mkdir dir="${fo.docs.dest}"/>
		<xslt basedir="${xhtml.docs.dest}" destdir="${fo.docs.dest}"
		style="${docs.src}/stylesheets/xhtml2fo.xsl" includes="**/*.html" extension=".fo"/>

</target>	

<target name="generate-pdf" description="Generates a single PDF file" depends="generate-fo">
   <fop format="application/pdf"         
        outfile="${docs.dest}/crank-codegen${app.version}-UserManual.pdf">
	    <fileset dir="${fo.docs.dest}">
           <include name="*.fo"/>
        </fileset>        
    </fop>
</target>	
	
</project>
