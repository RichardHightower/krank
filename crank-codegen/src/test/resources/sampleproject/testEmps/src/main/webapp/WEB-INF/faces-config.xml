<?xml version="1.0"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">

<!-- 
  <lifecycle>
		<phase-listener>org.crank.jsf.support.DebugPhaseListener</phase-listener>
  </lifecycle>
   -->
   
  <application>
    <variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>
    <message-bundle>messages</message-bundle>
  </application>
  
  
  <component>
    <component-type>org.crank.javax.faces.SelectOne</component-type>
    <component-class>org.crank.javax.faces.component.UISelectOne</component-class>
  </component>
  
  <render-kit>
      <renderer>
      <component-family>javax.faces.SelectOne</component-family>
      <renderer-type>org.crank.javax.faces.Listbox</renderer-type>
      <renderer-class>
			org.crank.javax.faces.component.ListboxRenderer
  	  </renderer-class>
    </renderer>
  
  </render-kit>
  
  <navigation-rule>
  	<navigation-case>
  		<from-outcome>HOME</from-outcome>
  		<to-view-id>/pages/Home.xhtml</to-view-id>
  	</navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <!-- Main Page Links (codegen) -->
    <navigation-case>
         <from-outcome>FOOS</from-outcome>
         <to-view-id>/pages/crud/fooListing.xhtml</to-view-id>
     </navigation-case>

    <navigation-case>
         <from-outcome>BARS</from-outcome>
         <to-view-id>/pages/crud/barListing.xhtml</to-view-id>
     </navigation-case>

    <navigation-case>
         <from-outcome>BAZS</from-outcome>
         <to-view-id>/pages/crud/bazListing.xhtml</to-view-id>
     </navigation-case>
  <!-- End of Main Page Links (codegen)  -->
</navigation-rule>



    <!-- Navigation goals for CRUD -->  
<navigation-rule>
  	<from-view-id>/pages/crud/fooListing.xhtml</from-view-id>
  	<navigation-case>
  		<from-outcome>FORM</from-outcome>
  		<to-view-id>/pages/crud/fooForm.xhtml</to-view-id>
  	</navigation-case>  	
  </navigation-rule>
  <navigation-rule>
  	<from-view-id>/pages/crud/fooForm.xhtml</from-view-id>  
  	<navigation-case>
  		<from-outcome>LISTING</from-outcome>
  		<to-view-id>/pages/crud/fooListing.xhtml</to-view-id>
  	</navigation-case>
  </navigation-rule>
	  
<navigation-rule>
  	<from-view-id>/pages/crud/barListing.xhtml</from-view-id>
  	<navigation-case>
  		<from-outcome>FORM</from-outcome>
  		<to-view-id>/pages/crud/barForm.xhtml</to-view-id>
  	</navigation-case>  	
  </navigation-rule>
  <navigation-rule>
  	<from-view-id>/pages/crud/barForm.xhtml</from-view-id>  
  	<navigation-case>
  		<from-outcome>LISTING</from-outcome>
  		<to-view-id>/pages/crud/barListing.xhtml</to-view-id>
  	</navigation-case>
  </navigation-rule>
	  
<navigation-rule>
  	<from-view-id>/pages/crud/bazListing.xhtml</from-view-id>
  	<navigation-case>
  		<from-outcome>FORM</from-outcome>
  		<to-view-id>/pages/crud/bazForm.xhtml</to-view-id>
  	</navigation-case>  	
  </navigation-rule>
  <navigation-rule>
  	<from-view-id>/pages/crud/bazForm.xhtml</from-view-id>  
  	<navigation-case>
  		<from-outcome>LISTING</from-outcome>
  		<to-view-id>/pages/crud/bazListing.xhtml</to-view-id>
  	</navigation-case>
  </navigation-rule>
	  <!-- End Navigation goals for CRUD  -->



    <!-- Crud Converters -->
  <converter>
  	<converter-for-class>com.foo.Foo</converter-for-class>
  	<converter-class>org.crank.crud.jsf.support.EntityConverter</converter-class>
  </converter>

  <converter>
  	<converter-for-class>com.foo.Bar</converter-for-class>
  	<converter-class>org.crank.crud.jsf.support.EntityConverter</converter-class>
  </converter>

  <converter>
  	<converter-for-class>com.foo.Baz</converter-for-class>
  	<converter-class>org.crank.crud.jsf.support.EntityConverter</converter-class>
  </converter>
  <!-- End Crud Converters  -->
  
  
  </faces-config>
