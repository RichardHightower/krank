<?xml version='1.0' encoding='UTF-8'?>


<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>

	<application>
	    <variable-resolver>
	    	org.springframework.web.jsf.DelegatingVariableResolver
	    </variable-resolver>
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
	</application>

        <validator>
    		<validator-id>JSFBridgeMetaDataDrivenValidator</validator-id>
    		<validator-class>org.crank.web.validation.jsf.support.JSFBridgeMetaDataDrivenValidator</validator-class>
  		</validator>
  		
  		<component>
	  		<component-type>org.crank.ValidationScriptGenerator</component-type>
  			<component-class>org.crank.web.validation.jsf.support.ValidationScriptGeneratorComponent</component-class>
  		</component>
  		
  		<lifecycle>
  			<phase-listener>org.crank.web.validation.jsf.support.ValidatorResourceLoaderPhaseListener</phase-listener>
  			<!--  <phase-listener>org.crank.web.jsf.support.DebugPhaseListener</phase-listener> -->
  		</lifecycle>

