<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
                        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="security-domain"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/DefaultDS</jta-data-source>

		<class>com.arcmind.jpa.course.User</class>
		<class>com.arcmind.jpa.course.Phone</class>

		<properties>
				
			<!-- Cache Properties -->
			<property name="jboss.entity.manager.jndi.name"
				value="java:/EntityManagers/security-domain" />

			<!-- Enable the second-level cache  -->
			<property name="hibernate.cache.use_second_level_cache"
				value="true" />

			<!-- Provider is JBoss Cache with Optimistic locking -->
			<property name="hibernate.cache.provider_class"
				value="org.hibernate.cache.OptimisticTreeCacheProvider" />

			<!-- JBoss Cache configuration file name -->
			<property
				name="hibernate.cache.provider_configuration_file_resource_path"
				value="jboss-cache.xml" />

			<!-- Use query cache too  -->
			<property name="hibernate.cache.use_query_cache"
				value="true" />

			<property name="hibernate.transaction.manager_lookup_class"
				value="org.hibernate.transaction.JBossTransactionManagerLookup" />
				
				
			<!-- property name="hibernate.transaction.manager_lookup_class"
				value="org.hibernate.transaction.JBossTSTransactionManagerLookup" /-->

		</properties>
	</persistence-unit>
</persistence>

